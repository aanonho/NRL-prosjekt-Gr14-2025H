@model WebApplication1.Models.UserData

@{
    ViewData["Title"] = "User Registration";
}

<div class="container mx-auto px-4 mt-8">
    <h1 class="text-2xl sm:text-3xl font-bold mb-6 text-center text-gray-800">User Registration Form</h1>
    <p class="text-center mb-6 text-gray-600">Please enter your information:</p>

    <form asp-action="UserForm" method="post" class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-3xl mx-auto">

        <div class="flex flex-col">
            <label asp-for="Name" class="mb-1 font-medium text-gray-700">Name</label>
            <input asp-for="Name" class="border border-gray-300 rounded p-2 focus:outline-none focus:ring-2 focus:ring-green-500" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex flex-col">
            <label asp-for="Email" class="mb-1 font-medium text-gray-700">Email</label>
            <input asp-for="Email" type="email" class="border border-gray-300 rounded p-2 focus:outline-none focus:ring-2 focus:ring-green-500" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex flex-col">
            <label asp-for="Phone" class="mb-1 font-medium text-gray-700">Phone</label>
            <input asp-for="Phone" type="tel" class="border border-gray-300 rounded p-2 focus:outline-none focus:ring-2 focus:ring-green-500" />
            <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex flex-col">
            <label asp-for="Address" class="mb-1 font-medium text-gray-700">Address</label>
            <input asp-for="Address" class="border border-gray-300 rounded p-2 focus:outline-none focus:ring-2 focus:ring-green-500" />
            <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
        </div>

        <div class="sm:col-span-2 flex justify-center mt-4">
            <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-6 py-2 rounded font-semibold">
                Submit Data
            </button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
