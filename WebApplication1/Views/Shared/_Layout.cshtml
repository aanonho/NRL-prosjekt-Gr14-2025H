<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>

    <!-- Tailwind CSS -->
    <link href="~/css/output.css" rel="stylesheet" />

    <!-- Egne CSS-filer -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-50">

    <header>
        <nav class="bg-white shadow-md">
            <div class="container mx-auto px-4 py-3 flex items-center justify-between">
                <!-- Logo -->
                <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center">
                    <img src="~/images/logo.png" alt="Logo" class="h-10" />
                    <span class="ml-2 font-bold text-lg text-gray-800">WebApplication1</span>
                </a>

                <!-- Hamburger (mobil) -->
                <div class="sm:hidden">
                    <button id="menu-btn" class="text-gray-800 focus:outline-none">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>

                <!-- Meny -->
                <ul id="menu" class="hidden sm:flex space-x-4 text-gray-800 font-medium">
                    <li><a class="hover:text-green-600" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="hover:text-green-600" asp-area="" asp-controller="User" asp-action="UserForm">User Registration</a></li>
                    <li><a class="hover:text-green-600" asp-area="" asp-controller="Obstacle" asp-action="DataForm">Obstacle Registration</a></li>
                    <li><a class="hover:text-green-600" asp-area="" asp-controller="User" asp-action="User">User</a></li>
                    <li><a class="hover:text-green-600" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    <li><a class="hover:text-green-600" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
                </ul>
            </div>

            <!-- Mobil-meny -->
            <ul id="mobile-menu" class="sm:hidden hidden flex-col px-4 pb-4 space-y-2 bg-white">
                <li><a class="block hover:text-green-600" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a class="block hover:text-green-600" asp-area="" asp-controller="User" asp-action="UserForm">User Registration</a></li>
                <li><a class="block hover:text-green-600" asp-area="" asp-controller="Obstacle" asp-action="DataForm">Obstacle Registration</a></li>
                <li><a class="block hover:text-green-600" asp-area="" asp-controller="User" asp-action="User">User</a></li>
                <li><a class="block hover:text-green-600" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                <li><a class="block hover:text-green-600" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
            </ul>
        </nav>
    </header>

    <div class="container mx-auto px-4 mt-6">
        <main role="main" class="pb-6">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white border-t py-4 mt-6">
        <div class="container mx-auto px-4 text-center text-gray-600">
            &copy; 2025 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-green-600 hover:underline">Privacy</a>
        </div>
    </footer>

    <script>
        // Toggle mobil-meny
        const menuBtn = document.getElementById('menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');

        menuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
